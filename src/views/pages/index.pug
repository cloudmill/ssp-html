extends ../layouts/master.pug



block loader
  include ../partials/_loader.pug

block content
  main#main.index-main(data-scroll-container)

    .fullpage-block(data-scroll-section data-header-parent)
      include ../partials/_header.pug

      .fulpage__slider.swiper-container
        .fulpage__slider-wrapper.swiper-wrapper
          .fulpage__slider-slide.swiper-slide
            .fulpage__slider-slide-bg-wrap-parallax(data-scroll data-scroll-speed="-1")
              .fulpage__slider-slide-bg-wrap.is-first-load
                .fulpage__slider-slide-bg(style="background-image: url('assets/images/header/header-slider-1.jpg')")
            h3.fulpage__slider-title
              span.fulpage__slider-title-span.is-first-load Сила
            .fullpage__slider-description.is-first-load
              p Мы исключительные профессионалы. Для нас нет неразрешимых задач. Мы идем до конца. Экспертиза, креативное мышление и коллективизм — это то, что делает нашу компанию сильной.
              +moreBtn('/about-company', "Больше о нас")
          .fulpage__slider-slide.swiper-slide
            .fulpage__slider-slide-bg-wrap-parallax(data-scroll data-scroll-speed="-1")
              .fulpage__slider-slide-bg-wrap
                .fulpage__slider-slide-bg(style="background-image: url('assets/images/header/header-slider-2.jpg')")
            h3.fulpage__slider-title
              span.fulpage__slider-title-span Стабильного
            .fullpage__slider-description
              p Высокая экспертиза, сила каждого специалиста и огромный опыт на рынке позволяют нам стабильно работать и достигать нужного результата.
              +moreBtn('/about-company', "Больше о нас")
          .fulpage__slider-slide.swiper-slide
            .fulpage__slider-slide-bg-wrap-parallax(data-scroll data-scroll-speed="-1")
              .fulpage__slider-slide-bg-wrap
                .fulpage__slider-slide-bg(style="background-image: url('assets/images/header/header-slider-3.jpg')")
            h3.fulpage__slider-title
              span.fulpage__slider-title-span Партнерства
            .fullpage__slider-description
              p Наша философия — каждый клиент это партнер. Именно такое отношение позволяет эффективно взаимодействовать, отметая формализм и барьеры в коммуникации.
              +moreBtn('/about-company', "Больше о нас")
        .fulpage__slider-pagination.swiper-pagination
      .fullpage-block__content
        h1.fullpage-block__title(data-scroll)
          p.first-line
            span.small-text Сила Стабильного Партнерства
            span.line
            span.big-text Наш основной принцип деятельности
          span.big-text заложен в самом названии
        .fullpage-block__contacts.d-none.d-xl-flex.fadeInUp(data-scroll)
          a(href="tel:+7 812 901–02–01").phone.link 8 812 901–02–01
          a(href="mailto:site@ssp-consult.ru").email.link site@ssp-consult.ru

    .practices-block(data-scroll-section)
      .practices__slider.swiper-container(data-scroll)
        .practices__slider-wrapper.swiper-wrapper
          .practices__slider-slide.practices__slider-slide-1.swiper-slide
            p.slide__subtitle Ведущие практики
            p.slide__title
              span 01
              | Банкротство #[br] и&nbsp;корпоративные конфликты
          .practices__slider-slide.practices__slider-slide-2.swiper-slide
            p.slide__subtitle Ведущие практики
            p.slide__title
              span 02
              | Трудовое и административное право
          .practices__slider-slide.practices__slider-slide-3.swiper-slide
            p.slide__subtitle Ведущие практики
            p.slide__title
              span 03
              | Разрешение споров
        .practices__slider-button-next.swiper-button-next
          .button-active
            img.svg(src="assets/images/icons/slider-arrow-small.svg", alt="next")
          img.svg(src="assets/images/icons/slider-arrow.svg", alt="next")
      .all
        include ../components/_all-practices.pug

    include ../components/_recognition.pug

    .news(data-scroll-section)
      .news__subtitle
        span.news__subtitle-span(data-scroll) События
      .news__header
        h2.news__title
          span.news__title-span(data-scroll)
            | Делимся экспертизой.
            br
            | Публикуемся в СМИ. Развиваемся.
        +moreBtn('/events', "Все события")(data-scroll)
      .news__content.container-fluid
        .row.justify-content-between
          .col-2.ps-0.d-none.d-xxl-block
            .news__content-img(data-scroll)
              img(src="assets/images/news.jpg", alt="news", data-scroll, data-scroll-speed="-2")
          .col-8.col-xxl-6.px-0
            ul.news__content-block.news__items.d-flex.justify-content-between(data-scroll)
              +newsItem(
                "20 декабря 2020",
                "Дарья Титкова в «Диалоге с бизнесом», при поддержке ЛО ТПП",
                "#",
                [
                  {
                    url: "#",
                    text: "суды"
                  },
                  {
                    url: "#",
                    text: "адвокаты"
                  },
                  {
                    url: "#",
                    text: "арбитраж"
                  }
                ]
              )(data-scroll)
              +newsItem(
                "20 декабря 2020",
                "ССП–Консалт ищет пострадавших от бездействий авиакомпаний",
                "event",
                [
                  {
                    url: "#",
                    text: "суды"
                  }
                ]
              )(data-scroll)

    .footer__wrap(data-scroll-section)
      include ../partials/_footer.pug
